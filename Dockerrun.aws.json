{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "django-app-template",
      "host": {
        "sourcePath": "/var/app/staging/app"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "appsvr",
      "image": "thehackerati/django-app-template",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "django-app-template",
          "containerPath": "/opt/app",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx",
      "image": "thehackerati/django-app-template-nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8000
        }
      ],
      "links": [
        "appsvr"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}
